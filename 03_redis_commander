apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis-commander
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis-commander
  template:
    metadata:
      labels:
        app: redis-commander
    spec:
      containers:
      - name: web
        image: rediscommander/redis-commander:latest
        env:
        - name: REDIS_HOST
          value: "redis-service"
        - name: REDIS_PORT
          value: "6379"
        - name: REDIS_DB
          value: "0"
        - name: REDIS_PASSWORD
          valueFrom:
            secretKeyRef:
              name: redis-secret
              key: redis-password
        ports:
        - containerPort: 8081
---
apiVersion: v1
kind: Service
metadata:
  name: visor-service
spec:
  type: NodePort
  selector:
    app: redis-commander
  ports:
    - port: 80
      targetPort: 8081
      nodePort: 30050
